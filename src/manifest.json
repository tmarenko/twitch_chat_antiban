{
  "author": "Timofei Marenko",
  "action": {
    "default_icon": {
      "16": "images/icon16.png",
      "24": "images/icon24.png",
      "32": "images/icon32.png"
    }
  },
  "content_scripts": [
    {
      "css": [
        "css/chat.css",
        "css/video-player.css"
      ],
      "js": [
        "scripts/libs/hls.min.js",
        "scripts/libs/jquery.min.js",
        "scripts/libs/reconnecting-websocket.min.js",
        "scripts/proxy-chat.js",
        "scripts/proxy-stream.js",
        "scripts/utils.js",
        "scripts/content.js"
      ],
      "matches": [
        "*://*.twitch.tv/*"
      ],
      "all_frames": true,
      "run_at": "document_end"
    }
  ],
  "background": {
    "service_worker": "scripts/background.js"
  },
  "host_permissions": [
    "*://*.amazonaws.com/*",
    "*://*.betterttv.net/*",
    "*://*.7tv.io/*",
    "*://*.twitch.tv/*",
    "*://*.ttvnw.net/*"
  ],
  "permissions": [
    "storage"
  ],
  "description": "Automatically opens a proxy stream & chat if you are banned in a channel.",
  "icons": {
    "128": "images/icon128.png",
    "16": "images/icon16.png",
    "48": "images/icon48.png"
  },
  "manifest_version": 3,
  "name": "Twitch Anti-Ban",
  "version": "4.0"
}
